DISCORD_TOKEN=your_token_here
CLIENT_ID=your_client_id_here
DATABASE_PATH=./data/bot.db
LOG_LEVEL=info
# Optional: Path to log file. When set, logs are written to both console and file.
# LOG_FILE_PATH=./logs/bot.log

# Admin API Configuration (optional)
# REST API for bot administration.
# ADMIN_API_ENABLED=false
# ADMIN_API_PORT=3000

# Admin API Bind Address
# IP address the API server will bind to. Default: 127.0.0.1 (localhost only)
# Use 0.0.0.0 to allow external access (NOT RECOMMENDED without proper firewall/reverse proxy)
# ADMIN_API_BIND_ADDRESS=127.0.0.1

# Bearer Token Authentication (legacy, still supported)
# ADMIN_API_TOKEN is required when ADMIN_API_ENABLED=true (if not using username/password)
# Use a strong random token (e.g., openssl rand -hex 32)
# ADMIN_API_TOKEN=your_secure_token_here

# Username/Password Authentication (alternative to bearer token)
# Both ADMIN_USERNAME and ADMIN_PASSWORD_HASH must be set together.
# To generate bcrypt hash: npx bcrypt-cli <your_password> 10
# Or using Node.js: node -e "console.log(require('bcryptjs').hashSync('your_password', 10))"
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD_HASH=$2a$10$abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLM
